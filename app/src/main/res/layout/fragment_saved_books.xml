<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SavedBooksFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saved_books_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/empty_saved_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_list_text"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/saved_books_list"
            app:layout_constraintEnd_toEndOf="@+id/saved_books_list"
            app:layout_constraintStart_toStartOf="@+id/saved_books_list"
            app:layout_constraintTop_toTopOf="@+id/saved_books_list" />
</androidx.constraintlayout.widget.ConstraintLayout>